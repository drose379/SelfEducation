<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentLayout">

    <include
        layout="@layout/tool_bar"
        >
    </include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/ColorAccent"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="65dp"
                android:onClick="newBookmarkFromDash"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="65dp"
                    android:id="@+id/img1"
                    android:src="@drawable/plus_new"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/ColorSubText"
                    android:text="Join This Subject"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="65dp"
                android:onClick="toPublicLessonList"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="65dp"
                    android:id="@+id/img2"
                    android:src="@drawable/lesson_new"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/ColorSubText"
                    android:text="Lessons"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="65dp"
                android:onClick="openTagManager"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="65dp"
                    android:id="@+id/img5"
                    android:src="@drawable/tag_new"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/ColorSubText"
                    android:layout_below="@+id/img1"
                    android:text="Projects"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="65dp"
                android:onClick="openQuestions"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="65dp"
                    android:id="@+id/img6"
                    android:src="@drawable/question_100"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/ColorSubText"
                    android:text="Question Board"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>